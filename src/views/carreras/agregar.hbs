<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Agregar carrera</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/carreras/agregar" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="idcarrera" placeholder="Codigo de la carrera"
                        autofocus />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="carrera" placeholder="Nombre de la carrera" />
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <button class="btn btn-success btn-block">Guardar</button>
                    </div>
                    <div class="col-6">
                        <a href="/carreras" class="btn btn-secondary btn-block">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>