<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Actualizar materia</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/materias/modificar/{{materia.idmateria}}" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="idmateria" placeholder="Codigo de la materia"
                        value="{{materia.idmateria}}" autofocus />
                </div>                 
                <div class="form-group">
                    <input type="text" class="form-control" name="materia" placeholder="Nombre de la materia" 
                        value="{{materia.materia}}"/>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <button class="btn btn-success btn-block">Actualizar</button>
                    </div>
                    <div class="col-6">
                        <a href="/materias" class="btn btn-secondary btn-block">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>