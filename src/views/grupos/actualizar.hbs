<div class="container p-4">
    <div class="row justify-content-center">
        <h1>Actualizar grupo</h1>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4">
            <form action="/grupos/modificar/{{grupo.idgrupo}}" method="POST">
                <div class="form-group">
                    <input type="number" class="form-control" name="idgrupo" placeholder="id del grupo"
                        value="{{grupo.idgrupo}}" />
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="num_grupo" placeholder="Numero de grupo" maxlength="3"
                        value="{{grupo.num_grupo}}" minlength="1" />
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="anio" placeholder="AÃ±o" value="{{grupo.anio}}" />
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="ciclo" placeholder="Ciclo"
                        value="{{grupo.ciclo}}" />
                </div>

                <div class="form-group">
                    <select class="form-control" name="idmateria">
                        {{#each lstMaterias}}
                        <option value="{{idmateria}}" {{#eq idmateria ../grupo.idmateria}}selected{{/eq}}>
                            {{materia}}</option>
                        {{/each}}
                    </select>
                </div>

                <div class="form-group">
                    <select class="form-control" name="idprofesor">
                        {{#each lstProfesores}}
                        <option value="{{idprofesor}}" {{#eq idprofesor ../grupo.idprofesor}}selected{{/eq}}>
                            {{nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <button class="btn btn-success btn-block">Actualizar</button>
                    </div>
                    <div class="col-6">
                        <a href="/grupos" class="btn btn-secondary btn-block">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>